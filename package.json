    "jquery": "^3.5.1",
    "js-cookie": "^2.1.3",
    "tailwindcss": "^2.1.1",
    "tailwindcss-pseudo-elements": "^2.0.0",
    "vue": "^2.6.12",
    "webfontloader": "^1.6.27"
  }
